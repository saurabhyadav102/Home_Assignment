{
  "compilerOptions": {
    /* File Layout */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Node.js Environment */
    "module": "commonjs",
    "target": "ES6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["node"],

    /* Build Outputs */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    /* Strict Type Checks */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* Clean Defaults */
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
